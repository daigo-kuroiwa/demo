<% provide(:title, "World") %>

<!--  検索拡張機能  -->
<% if logged_in? %>

<p>ホステル名検索</p>
  <%= form_tag(lodges_world_path, :method => 'get' , class:'form4') do %>
  <%= text_field_tag :search, '',class:'sbox4', placeholder:'ホステル名を入力　ex.Youth hostel' %>
  <button class="sbtn4" type="submit"><i class="fas fa-search"></i></button>
  <% end %>
  
<div class="search_condition">
 <p>エリア別検索</p>
  <%= form_tag(lodges_world_path, :method => 'get' , class:'form4') do %>
  <%= text_field_tag :search, '',class:'sbox4', placeholder:'国名を入力　ex.ドイツ' %>
  <button class="sbtn4" type="submit"><i class="fas fa-search"></i></button></div>
  <% end %>
  
<% end %>

<div class="buttons-coll">  
<button class="custom-btn btn-3"><span><%= link_to 'World', lodges_world_path, class: 'top_name' %></span></button>
</div>

<div class="dropdown">
　<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
　　<%= @page %>
　　<span class="caret"></span>
　</button>
　<ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
　　<li><%= link_to("3", "/world/3") %></li>
　　<li><%= link_to("5", "/world/5") %></li>
　　<li><%= link_to("10", "/world/10") %></li>
　　<li><%= link_to("20", "/world/20") %></li>
　</ul>
　<label>件ずつ表示する</label>
</div>

<%= will_paginate @lodges, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>

<% @lodges.each do |lodge| %>
  <p class="hotel_name"><%= link_to lodge.lodge, lodge.hp_link %></p>
  <ul class=hotel_info>
  <li><%= lodge.postal_code %></li>
  <li><%= lodge.prefecture %><%= lodge.address %></li>
  <li><%= lodge.phone_number %></li>
  <li><%= lodge.roomtype %></li>
  </ul>
<% end %>

<%= will_paginate @lodges, :previous_label => ' &lt 前へ', :next_label => '次へ &gt'%>